    "gulp": "^3.9.1",
    "gulp-env": "^0.4.0",
    "gulp-jshint": "^2.0.1",
    "gulp-mocha": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-transform": "^1.0.6",
    "istanbul": "^0.4.3",
    "jshint": "^2.9.2",
    "mocha": "^2.5.3"
  }
}

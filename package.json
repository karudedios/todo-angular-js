{
  "name": "todo-angular-js",
  "version": "0.0.0",
  "description": "TODO App built using MEAN",
  "main": "server.js",
  "scripts": {
    "lint:back": "jshint features/",
    "lint:spec": "jshint specs/",
    "lint": "npm run lint:back && npm run lint:spec",
    "test": "mocha --recursive --colors specs/",
    "cover": "istanbul cover _mocha -- -R min specs/ --recursive",
    "build": "npm run lint && npm run cover",
    "post-build": "rm -rf coverage/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karudedios/todo-angular-js.git"
  },
  "keywords": [
    "mongo",
    "express",
    "angular",
    "node",
    "mean",
    "todo"
  ],
  "author": "Carlos de Dios <c.dedios@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/karudedios/todo-angular-js/issues"
  },
  "homepage": "https://github.com/karudedios/todo-angular-js#readme",
  "dependencies": {
    "body-parser": "^1.15.1",
    "crypto": "0.0.3",
    "express": "^4.13.4",
    "express-session": "^1.13.0",
    "http": "0.0.0",
    "joi": "^8.4.0",
    "md5": "^2.1.0",
    "mongoose": "^4.4.19",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "q": "^1.4.1"
  },
  "engines": {
    "node": "=6.2.0"
  },
  "devDependencies": {
    "bower": "^1.7.9",
    "chai": "^3.5.0",
